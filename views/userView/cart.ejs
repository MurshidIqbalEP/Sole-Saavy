                    <th>Quantity</th>
                    <th>Total</th>
                    <th></th>
                  </tr>
                </thead>
                <tbody>
                  
                  <% let totalPrice = 0 %> <% cart.items.forEach((item) => { %>
                  <tr>
                    
                    <td class="product__cart__item">
                      <div class="product__cart__item__pic">
                        <img
                          src="<%= '/uploads/' + item.productId.image[0] %>"
                          alt=""
                        />
                      </div>
                      <div class="product__cart__item__text">
                        <h6><%= item.productId.productName %></h6>
                        <h5 id="actualPrice">

                          <% if(item.productId.offerAmound > 0 ){ %>
                           
                              
                              <h5 style="text-decoration: line-through; color: red;"><%= '₹' + item.productId.actualPrice %></h5>
                              <h5><%= '₹' + (item.productId.actualPrice-item.productId.offerAmound) %></h5>
                              

                          <% }else{ %>
                            &#8377;<%= item.productId.actualPrice %>
                          <% } %>

                          
                        </h5>
                      </div>
                    </td>
                    <td class="quantity__item">
                      <div class="quantity-control d-flex">
                        <button
                          class="btn btn-outline-secondary mr-1 quantity-btn"
                          data-action="decrease"
                          data-product-id="<%= item.productId._id %>"
                        >
                          -
                        </button>
                        <input
                          class="form-control quantity-input"
                          type="text"
                          value="<%= item.quantity %>"
                          data-product-id="<%= item.productId._id %>"
                          readonly
                          style="width: 40px; text-align: center"
                        />
                        <button
                          class="btn btn-outline-secondary ml-1 quantity-btn"
                          data-action="increase"
                          data-stock="<%= item.productId.Stock %>"
                          data-product-id="<%= item.productId._id %>"
                        >
                          +
                        </button>
                      </div>
                    </td>
                    <td class="cart__price">
                      &#8377;<span id="price"
                        ><%= (item.productId.actualPrice-item.productId.offerAmound) * item.quantity %></span
                      >
                    </td>
                    <td>
                      <button
                        type="button"
                        class="btn btn-dark"
                        style="margin-right: 12px"
                        onclick="RemoveProduct('<%= item.productId._id %>')"
                      >
                        Remove
                      </button>
                    </td>
                    
                  </tr>
                  <% totalPrice +=  (item.productId.actualPrice-item.productId.offerAmound) * item.quantity %>
                  <% }); %>
                </tbody>
              </table>
             
            </div>
            

