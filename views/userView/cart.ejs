    <script>
      document.addEventListener("DOMContentLoaded", function () {
        document.addEventListener("click", function (event) {
          if (event.target.classList.contains("quantity-btn")) {
            const action = event.target.getAttribute("data-action");
            const productId = event.target.getAttribute("data-product-id");
            const stock = event.target.getAttribute("data-stock");

            // Extract the unique identifier from productId
            const productIdString = productId.toString();

            // Select the quantity input field based on the productId
            const quantityInput = document.querySelector(
              `.quantity-input[data-product-id="${productIdString}"]`
            );

            let newQuantity;

            if (action === "increase") {
              newQuantity = parseInt(quantityInput.value, 10) + 1;
              if (newQuantity > stock) {
                // Display a SweetAlert if the new quantity exceeds the available stock
                Swal.fire({
                  title: "Stock unavailable!",
                  showConfirmButton: false,
                  timer: 1500,
                });
                return false;
              }
            } else if (
              action === "decrease" &&
              parseInt(quantityInput.value, 10) > 1
            ) {
              newQuantity = parseInt(quantityInput.value, 10) - 1;
            } else {
              // Invalid action or trying to decrease below 1
              return;
            }

            // Update the input field with the new quantity
            quantityInput.value = newQuantity;

            // Send an AJAX request to update the quantity on the server
            fetch("cart/updateQuantity", {
              method: "put",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({
                productId: productIdString,
                newQuantity: newQuantity,
              }),
            })
              .then((response) => response.json())
              .then((data) => {
                if (data.success) {
                  location.reload();
                }
                // Handle the response if needed
                console.log(data);
              })
              .catch((error) => console.error("Error:", error));
          }
        });
      });

      function RemoveProduct(productid) {
        fetch("cart/RemoveProduct", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ productid }),
        })
          .then((response) => response.json())
          .then((data) => {
            if (data) {
              let value = data.value;

              if (value == 1) {
                Swal.fire({
                  text: "Product removed!",
                  icon : 'success',
                  showConfirmButton: false,
                });
                setTimeout(() => {
                  location.reload();
                }, 1000);
              } else if (value ==2){
                Swal.fire({
                  text: "failed to remove  Product !",
                  icon : 'error',
                  showConfirmButton: false,
                });              }
            }
          })
          .catch((error) => console.error("Fetch error:", error));
      }
    </script>

