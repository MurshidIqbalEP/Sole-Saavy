                        <td><%= product[i].actualPrice %></td>
                        <td><%= product[i].category %></td>
                        <td><%= product[i].Stock %></td>
                        <td><%= product[i].description %></td>
                        <td class="flex align-items-center">
                          <button type="button" class="btn actionbtn <%= product[i].is_listed ? 'btn-danger' : 'btn-success' %>" data-product-id="<%= product[i]._id %>" data-product-state="<%= product[i].is_listed ? 'Listed' : 'Unlisted' %>" style="min-width: 120px;">
                            <%= product[i].is_listed ? 'Unlist' : 'List' %>
                          </button>
                        
                          <a href="/admin/productedit?id=<%= product[i]._id %>" class="text-white">
