                              <% if (product[i].image && product[i].image.length > 0) { %>
                              
                                  <img src="<%= '/uploads/' + product[i].image[0] %>" alt="No pic" class="img-fluid" style="max-width: 50px; max-height: 50px; border-radius: 30%;">
                                
                              <% } else { %>
                                <img src="path/to/placeholder-image.jpg" alt="No pic" class="img-fluid" style="max-width: 100px; max-height: 100px;">
                              <% } %>
                            </td>
                            <td><%= product[i].productName %></td>
                            <td><%= product[i].actualPrice %></td>
                            <td><%= product[i].category %></td>
                            <td><%= product[i].Stock %></td>
                            <td><%= product[i].description %></td>
                            <td>
                              <button type="button" class="btn actionbtn <%= product[i].is_listed ? 'btn-danger' : 'btn-success' %>" data-product-id="<%= product[i]._id %>" data-product-state="<%= product[i].is_listed ? 'Listed' : 'Unlisted' %>" style="min-width: 100px;">
                                <%= product[i].is_listed ? 'Unlist' : 'List' %>
                              </button>

                              <a href="/admin/productedit?id=<%= product[i]._id %>" class="text-white">
                              <button type="button" class="btn actionbtn btn-info ml-2 mt-2" style="min-width: 100px;">
                               EDIT
                              </button></a>
                            </td>
                          </tr>
