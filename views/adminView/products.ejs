                          <button class="btn btn-dark ml-2 mt-2" id="<%= product[i]._id %>" style="min-width: 120px;" onclick="addOfferIntoProduct('<%= product[i]._id %>')">
                            Apply Offer
                          </button>
                          <% }else{ %>
                            <button class="btn btn-dark ml-2 mt-2" id="<%= product[i]._id %>" style="min-width: 120px; color: red;" onclick="addOfferIntoProduct('<%= product[i]._id %>')">
                              <%= product[i].offerName %>
                            </button>
                          <% } %>


                        <% if( product[i].offerAmound > 0){ %>
                          <button class="btn btn-warning ml-2 mt-2" id="<%= product[i]._id %>" style="min-width: 120px;" onclick="removeOffer('<%= product[i]._id %>')">
