                        <th>No</th>
                        <th>Image</th>
                        <th>Product Name</th>
                        <th>Actual Price</th>
                        <th>Category</th>
                        <th>Stock</th>
                        <th>Description</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if (product.length > 0) { %>
                        <% for (let i = 0; i < product.length; i++) { %>
