      <script>  

    function removeOffer(productId){
      fetch('/admin/removeOffer',{
        method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body:JSON.stringify({productId})
         })
         .then(response =>{
          return response.json()
         })
         .then(data =>{
          Swal.fire({
          position: "center",
          icon: "success",
          title: "Offer Removed",
          showConfirmButton: false,
          timer: 1500
             });

            setTimeout(() => {
              window.location.reload()
            }, 1600);
         })

      
    }




     function  addOfferIntoProduct(productId){
      const offers = document.getElementById('off').value
    
    
     // Create Swal alert with offer list
     Swal.fire({
                        title: "<u><strong> Offers</strong></u>",
                        html: `
                    
                    <% offers.forEach(offer => { %>
                        <div class="divCoupon"> 
                            <p> Offer Name:&nbsp;<strong><%= offer.offerName %></strong></p>
                            <p>Discount Offer:&nbsp; <strong><%= offer.discount %>%</strong></p>
                            <button class="btn btn-success offerbtn" onclick="applyoffer('<%= offer._id %>', '<%= offer.discount %>','${productId}' )">Apply</button>
                        </div>
                    <% }); %> `,
                        showCloseButton: true,
                        showCancelButton: false,
                        focusConfirm: false,
                        confirmButtonText: `Done !`,
                    });


    }

    function applyoffer(offerId,Discount,productId){
      Swal.fire({
           position: "center",
           icon: "success",
           title: "Offer Added",
           showConfirmButton: false,
           timer: 1500
         });

         fetch('/admin/productOffer',{
          method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body:JSON.stringify({productId,offerId})
         })
         .then(response =>{
          return response.json();
         })
         .then(data =>{
          console.log(data.Name);

          setTimeout(() => {
              window.location.reload()
            }, 1600);
         })
    }


  document.querySelectorAll('.actionbtn').forEach(function(button){
    button.addEventListener('click',  function () {
        let productId = this.getAttribute('data-product-id');
        let productState = this.getAttribute('data-product-state');
        console.log(productId,productState);
    
    

        let url;

        if(productState=='Listed'){
          url ='/admin/unlist-product'
        }
        else{ 
          url ='/admin/list-product'
        }
        
        console.log(url);
       
        
        fetch(url, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body:JSON.stringify({productId})
        }).then(response => {
            return response.json();
        }).then(data=>{
          if(data.message){
            if(productState=='Listed'){
              this.setAttribute('data-product-state', 'Unlisted')
              this.textContent = 'List'
              this.classList.replace('btn-danger', 'btn-success')

              Swal.fire({
  title: "Product Unlisted",
  showClass: {
    popup: `
      animate__animated
      animate__fadeInUp
      animate__faster
    `
  },
  hideClass: {
    popup: `
      animate__animated
      animate__fadeOutDown
      animate__faster
    `
  }
});
            }else{
              this.setAttribute('data-product-state', 'Listed')
              this.textContent = 'Unlist'
              this.classList.replace('btn-success', 'btn-danger')
             
              Swal.fire({
  title: "Product Listed",
  showClass: {
    popup: `
      animate__animated
      animate__fadeInUp
      animate__faster
    `
  },
  hideClass: {
    popup: `
      animate__animated
      animate__fadeOutDown
      animate__faster
    `
  }
});

            }
          }
        })
      })})
     

      </script> 

