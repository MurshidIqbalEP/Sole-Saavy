      <script>  


  document.querySelectorAll('.actionbtn').forEach(function(button){
    button.addEventListener('click',  function () {
        let productId = this.getAttribute('data-product-id');
        let productState = this.getAttribute('data-product-state');
        console.log(productId,productState);
    
    

        let url;

        if(productState=='Listed'){
          url ='/admin/unlist-product'
        }
        else{ 
          url ='/admin/list-product'
        }
        
        console.log(url);
       
        
        fetch(url, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body:JSON.stringify({productId})
        }).then(response => {
            return response.json();
        }).then(data=>{
          if(data.message){
            if(productState=='Listed'){
              this.setAttribute('data-product-state', 'Unlisted')
              this.textContent = 'List'
              this.classList.replace('btn-danger', 'btn-success')

              Swal.fire({
  title: "Product Unlisted",
  showClass: {
    popup: `
      animate__animated
      animate__fadeInUp
      animate__faster
    `
  },
  hideClass: {
    popup: `
      animate__animated
      animate__fadeOutDown
      animate__faster
    `
  }
});
            }else{
              this.setAttribute('data-product-state', 'Listed')
              this.textContent = 'Unlist'
              this.classList.replace('btn-success', 'btn-danger')
             
              Swal.fire({
  title: "Product Listed",
  showClass: {
    popup: `
      animate__animated
      animate__fadeInUp
      animate__faster
    `
  },
  hideClass: {
    popup: `
      animate__animated
      animate__fadeOutDown
      animate__faster
    `
  }
});

            }
          }
        })
      })})
     

      </script> 

