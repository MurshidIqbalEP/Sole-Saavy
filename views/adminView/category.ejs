                          </a>

                          <% if(categories[i].offerPercentage > 0) { %>
                            <button class="btn btn-dark"  id="<%= categories[i]._id %>" ><%= categories[i].offerName %></button>
                            <button class="btn btn-warning" onclick="removeOfferCategory('<%= categories[i]._id %>')">Remove</button>
                          <% }else { %>
                          <button class="btn btn-dark"  id="<%= categories[i]._id %>"  onclick="addOfferToCategory('<%= categories[i]._id %>')">Add Offer</button>
