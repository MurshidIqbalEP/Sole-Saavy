      <script>
        function removeOfferCategory(categoryId){
          
          fetch('/admin/removeOfferCategory',{
          method:'post',
          headers:{
            'Content-Type': 'application/json',
          },
          body:JSON.stringify({categoryId})
          })
          .then(response=>{
            return response.json()
          })
          .then(data =>{
            if(data.value===1){
              Swal.fire({
              position: "center",
               icon: "success",
               title: "Offer Removed",
               showConfirmButton: false,
               timer: 1500
                 });

                 setTimeout(() => {
                  window.location.reload()
                 }, 1600);
                

            }
          })

        }



      function addOfferToCategory(categoryId){
        const offers = document.getElementById('off').value
         // Create Swal alert with offer list
     Swal.fire({
                        title: "<u><strong> Offers</strong></u>",
                        html: `
                    
                    <% offers.forEach(offer => { %>
                        <div class="divCoupon"> 
                            <p> Offer Name:&nbsp;<strong><%= offer.offerName %></strong></p>
                            <p>Discount Offer:&nbsp; <strong><%= offer.discount %>%</strong></p>
                            <button class="btn btn-success offerbtn" onclick="applyoffer('<%= offer._id %>', '<%= offer.discount %>','${categoryId}' )">Apply</button>
                        </div>
                    <% }); %> `,
                        showCloseButton: true,
                        showCancelButton: false,
                        focusConfirm: false,
                        confirmButtonText: `Done !`,
                    });

      }

      function applyoffer(offerId,discount,categoryId){
        
        fetch('/admin/applyOfferToCategory',{
          method:'post',
          headers:{
            'Content-Type': 'application/json',
          },
          body:JSON.stringify({offerId,categoryId})
        })
        .then(response =>{
          return response.json()
        })
        .then(data =>{
          if(data.value==1){

            document.getElementById(categoryId).innerText='XXXXX'

            Swal.fire({
              position: "center",
               icon: "success",
               title: "Offer Applyied",
               showConfirmButton: false,
               timer: 1500
                 });

                 setTimeout(() => {
                  window.location.reload()
                 }, 1600);

          }
        })


      }




         function addCategory(){
            const newCategory = document.getElementById('textInput').value.trim()

             // Check if the category is not empty
       if (newCategory !== '') {
        // Create a new list item
        fetch('/admin/category', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          // Add any other headers as needed
        },
        body: JSON.stringify({ category:newCategory})
      }).then(response => {
            return response.json();
      }).then(data =>{
        let value = data.value
        if(data){
          if(value==0){
            Swal.fire({
  title: "Category Already Exist",
  showClass: {
    popup: `
      animate__animated
      animate__fadeInUp
      animate__faster
    `
  },
  hideClass: {
    popup: `
      animate__animated
      animate__fadeOutDown
      animate__faster
    `
  }
});
          }else if (value==1){
            window.location.reload();
            
            Swal.fire({
  title: "new category added",
  showClass: {
    popup: `
      animate__animated
      animate__fadeInUp
      animate__faster
    `
  },
  hideClass: {
    popup: `
      animate__animated
      animate__fadeOutDown
      animate__faster
    `
  }
});
          }
     
        }
      
      }).catch(error => {
            console.log(error);
        });


      } else {
        // Notify the user that the category cannot be empty
        alert('Please enter a category.');
      }
    }




    document.querySelectorAll('.actionbtn').forEach(function(button){
    button.addEventListener('click',  function () {
        let categoryId = this.getAttribute('data-category-id');
        let currentState = this.getAttribute('data-category-state');

    
    

        let url;
      
        if(currentState=='Listed'){
          url ='/admin/unlist-category'
        }
        else{
          url ='/admin/list-category'
        }
        
        

        fetch(url, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body:JSON.stringify({categoryId})
        }).then(response => {
            return response.json();
        }).then(data=>{
          if(data.message){
            if(currentState=='Listed'){
              this.setAttribute('data-category-state', 'Unlisted')
              this.textContent = 'List'
              this.classList.replace('btn-danger', 'btn-success')

              Swal.fire({
  title: "Category Unlisted",
  showClass: {
    popup: `
      animate__animated
      animate__fadeInUp
      animate__faster
    `
  },
  hideClass: {
    popup: `
      animate__animated
      animate__fadeOutDown
      animate__faster
    `
  }
});
            }else{
              this.setAttribute('data-category-state', 'Listed')
              this.textContent = 'Unlist'
              this.classList.replace('btn-success', 'btn-danger')
             
              Swal.fire({
  title: "Category Listed",
  showClass: {
    popup: `
      animate__animated
      animate__fadeInUp
      animate__faster
    `
  },
  hideClass: {
    popup: `
      animate__animated
      animate__fadeOutDown
      animate__faster
    `
  }
});

            }
          }
        })
      })})
      

      </script>

