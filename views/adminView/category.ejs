                    <% if (categories.length > 0) { %>
                      <% for (let i = 0; i < categories.length; i++) { %>
                        <tr>
                          <td class="align-middle"><%= categories[i].categoryName %></td>
                          <td class="d-flex justify-content-center">
                            <button type="button" class="btn actionbtn <%= categories[i].is_listed ? 'btn-danger' : 'btn-success' %>" data-category-id="<%= categories[i]._id %>" data-category-state="<%= categories[i].is_listed ? 'Listed' : 'Unlisted' %>" style="min-width: 100px;">
                              <%= categories[i].is_listed ? 'Unlist' : 'List' %>
                            </button>
                            <a href="/admin/edit?id=<%= categories[i]._id %>" class="text-white">
