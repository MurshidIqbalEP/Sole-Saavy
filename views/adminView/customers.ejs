      <script>

document.querySelectorAll('.actionbtn').forEach(function(button){
    button.addEventListener('click',  function () {
        let userId = this.getAttribute('user-data-id');
        let currentState = this.getAttribute('user-state');


        let url;
      

        if (currentState === "Unblocked") {
          url ='/admin/block-user'
            
        } else {
          url ='/admin/unBlock-user'
        }


        fetch(url, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body:JSON.stringify({userId})
        }).then(response => {
            return response.json();
        }).then(data => {
          if (data.message) {
                      if (currentState == 'Unblocked') {
                          this.setAttribute('user-state', 'Blocked')
                          this.textContent = 'Unblock'
                          this.classList.replace('btn-danger', 'btn-success')
                          
                          Swal.fire({
                           title: "Are You Sure? Blocking User",
                           showClass: {
                           popup: `
                            animate__animated
                          animate__fadeInUp
                           animate__faster
                          `
                          },
                         hideClass: {
                         popup: `
                           animate__animated
                           animate__fadeOutDown
                           animate__faster
                             `
                          }
                      });

                      } else {
                          this.setAttribute('user-state', 'Unblocked')
                          this.textContent = 'Block'
                          this.classList.replace('btn-success', 'btn-danger')
                         

                          Swal.fire({
                           title: "Are You Sure? unBlocking User",
                           showClass: {
                           popup: `
                           animate__animated
                           animate__fadeInUp
                           animate__faster
                            `
                           },
                          hideClass: {
                           popup: `
                          animate__animated
                          animate__fadeOutDown
                            animate__faster
                           `
                            }
                          });
                        
                          
                      }

                  }


        }).catch(error => {
            console.log(error); 
        });
    });
});

