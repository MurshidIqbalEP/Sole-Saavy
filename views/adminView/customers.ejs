                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Verified</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if (users.length > 0) { %>
                        <% for (let i = 0; i < users.length; i++) { %>
                          <tr>
                            <td><%= users[i].FirstName %></td>
                            <td><%= users[i].LastName %></td>
                            <td><%= users[i].Email %></td>
                            <td>
                              <% if (users[i].is_verified == 0) { %>
                                <p>Not Verified</p>
                              <% } else { %>
                                <p>Verified</p>
                              <% } %>
                            </td>
                            <td>
                              <button type="button" class="btn actionbtn <%= users[i].is_blocked == true ? 'btn-success' : 'btn-danger' %>" user-data-id="<%= users[i]._id %>" user-state="<%=users[i].is_blocked ? 'Blocked' : 'Unblocked'%>" style="min-width: 100px;">
                                <%= users[i].is_blocked ? 'Unblock' : 'Block' %>
                              </button>
                            </td>
                          </tr>
                        <% } %>
                      <% } else { %>
